#loginform
.row
  .small-2.columns
  .panel.small.small-3.columns
    = form_tag '/login' do
      = label_tag 'email'
      = text_field_tag 'email', nil, :autofocus => true
      = label_tag 'password'
      = password_field_tag 'password'
      = submit_tag 'Sign in', :class => 'button radius recipezybtn'
    .cancel_text#cancel_login_form= link_to 'x', root_path
.small-7.columns